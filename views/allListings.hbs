<h2>All Airbnb Listings</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Neighbourhood</th>
            <th>Price</th>
            <th>View</th>
        </tr>
    </thead>

    <tbody>
        {{#each listings}}
        <tr>
            <td>{{id}}</td>
            <td>{{NAME}}</td>
            <td>{{neighbourhood}}</td>
            <td>{{price}}</td>
            <td>
                <a class="" href="/airbnb_hbs/view/{{id}}">View</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>